<div class="form-group grid g-3 pt-3">
  <div class="col-6"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %></div>
</div>

<div class="form-group grid g-3">
  <div class="col-6"><%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "パスワード" %></div>
</div>

<div class="form-group grid g-3 pt-2">
  <div class="col-6">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
</div>