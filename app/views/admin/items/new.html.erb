<h3 class="offset-1">商品新規登録</h3>

<div class="col-8 offset-2 mt-5">
    <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
      <div class="form-group row">
        <div class="col-4"><%= f.label :商品画像 %></div>
        <div class="col-8"><%= f.attachment_field :image %></div>
      </div>   

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :商品名 %></div>
        <div class="col-8"><%= f.text_field :name, placeholder: "商品名" %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :商品説明 %></div>
        <div class="col-8"><%= f.text_area :introduction, placeholder: "ここに説明文を記載してください" %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :ジャンル %></div>
        <div class="col-8"><%= f.collection_select (:genre_id, Genre.all, :id, name, prompt:"--選択してください--") %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :税抜き価格 %></div>
        <div class="col-8"><%= f.text_field :subtotal %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :販売ステータス %></div>
        <div class="col-8">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_actice, false %>
          <%= f.label :is_active, "販売停止中" %>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  
</div>