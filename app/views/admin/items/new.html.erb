<h2>商品新規登録</h2>

<div class="col-8 offset-2 mt-5">
    <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
      <div class="form-group row">
        <div class="col-4"><%= f.label :商品画像 %></div>
        <div class="col-8"><%= f.attachment_field :image, class: "form-control" %></div>
      </div>   

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :商品名 %></div>
        <div class="col-8"><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :商品説明 %></div>
        <div class="col-8"><%= f.text_area :detail, placeholder: "ここに説明文を記載してください", class: "form-control" %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :ジャンル %></div>
        <div class="col-8"><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "--選択してください--") %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :税抜き価格 %></div>
        <div class="col-8"><%= f.text_field :price, class: "form-control" %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :販売ステータス %></div>
        <div class="col-8">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_actice, false %>
          <%= f.label :is_active, "販売停止中" %>
        </div>
      </div>

<%# WARNING(商品の新規作成ができない = エラー発生中) %>
      <div class="text-center mt-4">
        <%= f.submit "新規登録", new_admin_item_path, class: "btn btn-success w-50" %>
      </div>
    <% end %>
</div>