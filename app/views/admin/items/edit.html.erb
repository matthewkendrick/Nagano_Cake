<h3 class="offset-1">商品編集</h3>

<div class="col-8 offset-2 mt-5">
  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>

    <div class="form-group row">
      <div class="col-4"><%= f.label :商品画像 %></div>
      <div class="col-8"><%= f.attachment_field :image, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :商品名 %></div>
      <div class="col-8"><%= f.text_field :name, autofocus: true, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :商品説明 %></div>
      <div class="col-8"><%= f.text_area :detail, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :ジャンル %></div>
      <div class="col-8"><%= f.select :genre_id, @genres.map{|genre| [genre.name, genre.id]}, {include_blank: "--選択してください--"}, {class: "form-select"} %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"></div>
      <div class="col-8"><%= f.text_field :price, class: "form-control" %></div>
    </div>

    <div class="form-row text-center mt-4">
      <div class="col">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
      </div>
      <div class="col">
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
    </div>
    
    <div class="text-center mt-4">
      <%= f.submit "変更を保存", class: "btn btn-success w-50" %>
    </div>
  <% end %>
</div>