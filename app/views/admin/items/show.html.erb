<h2>商品詳細</h2>

<%# TODO(もう少しレイアウトを調整したい) %>
<div class="row">
  <span class="border mb-4"></span>
  <div class="col-lg-5 text-center">
    <%= attachment_image_tag @item, :image, :fill, 250, 200, fallback: "NO_IMG.png", class: "rounded" %>
  </div>
  <div class="col mt-3">
    <div class="row">
      <div class="col-6">商品名</div>
      <div class="col-6"><%= @item.name %></div>
    </div>

    <div class="row mt-3">
      <div class="col-5">商品説明</div>
      <div class="col-7"><%= @item.detail %></div>
    </div>

    <div class="row mt-3">
      <div class="col-5">ジャンル</div>
      <div class="col-7"><%= @item.genre %></div>
    </div>

    <div class="row mt-3">
      <div class="col-5">税込み価格 <br>(税抜き価格)</div>
      <div class="col-7">
        ¥ <%= @item.with_tax_price %><br>
        ¥ <%= @item.price %> (税抜き)
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-5">販売ステータス</div>
      <div class="col-7">
        <% if @item.is_active? %>
          <div class="text-success">販売中</div>
        <% else %>
          <div class="text-secondary">販売停止中</div>
        <% end %>
      </div>
    </div>

    <div class="text-center mt-4">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success w-50" %>
    </div>
  </div>
</div>