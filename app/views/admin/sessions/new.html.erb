<h2 class="mb-5">管理者ログイン</h2>

<%= form_with model: @admin, url: admin_session_path, local:true do |f| %>
  <div class="container">
    <div class="form-group row">
      <div class="col"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %></div>
    </div>
  </div>

  <div class="form-group grid g-3">
      <div class="col"><%= f.password_field :password, class: "form-control", placeholder: "パスワード" %></div>
  </div>
 
  <% if devise_mapping.rememberable? %>
    <div class="form-group grid g-3">
      <div class="col">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="form-group grid g-3 pt-3">
    <div class="row acrions">
      <div class="text-center"><%= f.submit "ログイン", class: "btn btn-primary w-50" %></div>
    </div>
  </div>
  <%= render "admin/shared/links" %>
<% end %>

<div class="pt-5">
  <h5>会員の方は</h5>
  <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
</div>