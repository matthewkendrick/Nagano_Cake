<h2 class="offset-1 mt-4">ジャンル一覧・追加</h2>

<div class="container">
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="form-row ml-5 mt-5">
      <div class="col-8"><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %></div>
      <div class="col-3"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>


    <div class="row ml-4 mt-5">
      <div class="col-10">
        <table class="table table-light">
          <thead class="table-active">
            <tr>
              <th class="bg-black">ジャンル</th>
              <th class="bg-black"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn-sm btn-primary" %></td>
              </tr> 
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>