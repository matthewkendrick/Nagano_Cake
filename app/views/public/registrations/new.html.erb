<h2>新規会員登録</h2>
<% if @customer.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <%= form_with model: @customer, url: customer_registration_path, local:true do |f| %>
    <div class="container">
      <div class="form-row form-group pt-3">
        <div class="col-sm-3"><%= f.label :名前 %></div>
        
        <div class="col-sm-4"><%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "(姓)" %></div>
        <div class="col-sm-4"><%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "(名)" %></div>
      </div>

      <div class="form-row form-group pt-3">
        <div class="col-sm-3"><%= f.label :フリガナ %></div>

        <div class="col-sm-4"><%= f.text_field :last_name_kana, autofocus: true, class: "form-control", placeholder: "(セイ)" %></div>
        <div class="col-sm-4"><%= f.text_field :first_name_kana, autofocus: true, class: "form-control", placeholder: "(メイ)" %></div>
      </div>

      <div class="form-row form-group pt-3">
        <div class="col-sm-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-sm-8"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "sample@nagano.com" %></div>
      </div>

      <div class="form-row form-group pt-3">
        <div class="col-sm-3"><%= f.label :postal_code, "郵便番号" %></div> 
        <div class="col-sm-8"><%= f.text_field :postal_code, autofocus: true, class: "form-control", placeholder: "〒0001111 (ハイフンなし)" %>
        </div>
      </div>

      <div class="form-row form-group pt-3">
        <div class="col-sm-3"><%= f.label :address, "住所" %></div>
        <div class="col-sm-8"><%= f.text_area :address, autofocus: true, class: "form-control", placeholder: "", rows: "5" %></div>
      </div>

      <div class="form-row form-group pt-3">
        <div class="col-sm-3"><%= f.label :telephone_number, "電話番号" %></div>
        <div class="col-sm-5"><%= f.text_field :telephone_number, autofocus: true, class: "form-control", placeholder: "例) 11100002222" %></div>
      </div>

      <div class="form-row form-group pt-3">
        <div class="col-sm-3"><%= f.label :password, "パスワード" %></div>
        <div class="col-sm-8">
          <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Enter Password" %>
          <small class="help-block text-muted">( <%= @minimum_password_length %> 文字以上)</small>
        </div>
      </div>

      <div class="form-row form-group pt-3">
        <div class="col-sm-3"></div>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Enter Password" %>
          <small class="help-block text-muted">(確認用)</small>
        </div>
      </div>
      <div class="row text-center pt-4">
        <div class="col">
          <%= f.submit "新規登録", class: "btn btn-success w-50" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col mt-5">
      <h3>既に登録済みの方</h3>
      <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>
  
