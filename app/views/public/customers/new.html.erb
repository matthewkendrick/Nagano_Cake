<div class="col-md-10 mx-auto">
  <h3>ログイン</h3>

  <% if flash[:notice] %>
    <p class="text-seccess">flash[:notice]</p>
  <% end %>

  <div class="me-5 mb-3">
    <h5>会員の方はこちらからログイン</h5>
  </div>
  <%= form_with model: @customer, url: customer_session_path, local:true do |f| %>
    <div class="col-md-9 mx-auto">
      <div class="form-group row pb-3">
        <div class="col-md-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-md-9"><%= f.email_field :email, autocomplete: "email" %></div>
      </div>

      <div class="form-group row pb-3">
      <div class="col-md-3"><%= f.label :password, "パスワード" %></div>
      <div class="col-md-9"><%= f.password_field :password, autocomplete: "current-password" %></div>
      </div>

      <div class="form-group row offset-3">
        <%= f.submit "ログイン", class: "btn btn-primary", style: "width: 150px" %>
      </div>
    </div>
  <% end %>

  <div class="pt-5">
    <h5>会員登録がお済みでない方</h5>
    <p><%= link_to "こちら", new_customer_registrarion_path %> から新規登録してください。</p>
  </div>
  <div class="pt-5">
    <h5>管理者の方は</h5>
    <p><%= link_to "こちら", new_admin_session_path %> からログインしてください。</p>
  </div>
</div>