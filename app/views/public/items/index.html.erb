<h2>
  商品一覧
  <span>(全<%= @items.count %>件)</span>
</h2>
<div class="row">
  <div class="col-10 ml-5">
    <% @items.each do |item| %>
      <div class="card mt-5 ml-5 shadow-lg">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 650, 600, class: "card-img-top rounded-3 py-3 px-2", fallback: "no_image.jpg" %>
        <% end %>
        <div class="card-body">
          <div class="card-title"><%= item.name %></div>
          <h3>¥ <%= item.with_tax_price %></h3>
        </div>
      </div> 
    <% end %>
  </div>
</div>