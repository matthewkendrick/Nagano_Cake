<div class="row">
  <div class="col-md-8">
    <h3>
      商品一覧
      <span class="">(全<%= @items.count %>件)</span>
    </h3>
    <% @items.each do |item| %>
      <div class="itemcard">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 210, 180, fallback: "no_image.jpg" %>
        <% end %>
        <div class="card-body">
          <div class="card-title"><%= item.name %>
            <div class="">¥<%= item.with_tax_price %></div>
          </div>
        </div>
      </div> 
    <% end %>
  </div>
</div>