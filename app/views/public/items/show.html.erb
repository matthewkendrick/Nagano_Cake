<div class="container col-6">
  <div class="col">
    <%= attachment_image_tag @item, :image, :fill, 300, 300, class: "rounded-3" %>
  </div>

  <div class="col">
    <h4 class="font-weight-bold"><%= @item.name %></h4>
    <div class="my-3"><%= @item.detail %></div>
    <div class="font-weight-bold">
      <span class="">¥ <%= @item.with_tax_price %> (税込み)</span>
    </div>
  </div>
  <div class="mt-3">
    <% if @item.is_active? %>
      <div class="mt-3">
        <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
          <div class="ml-2">
            <%= f.select :amount, *[1..10], prompt: "個数を選択してください", class: "form-select" %>
            <%= f.hidden_field :item_id, value: @item.id %>
          </div>
          <div class="mt-5 text-center">
            <%= f.submit "カートに入れる", class: "btn btn-success w-50" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <h1 class="display-6">売り切れ</h1>
    <% end %>
  </div>
</div>
