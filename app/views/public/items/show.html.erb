<div class="col-3">
  <%= attachment_image_tag @item, :image, :fill, 50, 60 %>
</div>

<div class="col-md-4">
  <h3 class="font-weight-bold"><%= @item.name %></h3>
  <div class="my-3"><%= @item.detail %></div>
  <div class="font-weight-bold">
    <span class="">¥<%= @item.with_tax_price %>(税込み)</span>
  </div>
</div>

<div class="mt-3">
  <% if @item.is_active? %>
    <div class="mt-3">
      <%= form_with model: @cart_item, url: cart_items_path, method: :post, local:true do |f| %>
        <%= f.select :amount, *[1..10], prompt: "個数を選択してください" %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.submit "カートに入れる", class: "btn btn-seccess btn-sm ml-5" %>
      <% end %>
    </div>
  <% else %>
    <h1 class="display-6">売り切れ</h1>
  <% end %>
</div>