<div class="row">
  <h3 class="offset-1">カート</h3>
  <div class="col text-right">
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger btn-md" %>
  </div>
</div>

<% if @cart_items.empty? %>
  <p>商品を追加してください</p>
<% else %>
  <div class="row pt-5">
    <table class="table table-light table-borderless border">
      <thead>
        <tr class="text-white bg-black">
          <th>商品名</th>
          <th>単価(税込み)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
                <%= attachment_image_tag cart_item.item, :image, :fill, 100, 80 %>
                <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model: @cart_item, url: cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
                <%= f.hidden_field :item_id, value: cart.item_id %>
                <div class="input-group">
                  <%= f.select :amount, *[1..20], { prompt: "#{cart_item.amount}" } %>
                  <%= f.submit "変更", class: "cart_in_btn" %>
                </div>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<div class="row pt-4">
  <div class="col-5"><%= link_to "買い物を続ける", root_path, class: "btn btn-success btn-md" %></div>

  <table class="table table-light table-borderless border col-4 ml-auto">
    <tr>
      <th class="text-white bg-black">合計金額</th>
      <th><%= @payment %>円</th>
    </tr>
  </table>
</div>

<% if @cart_items.empty? %>
  <div class="text-center">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  </div>
<% end %>