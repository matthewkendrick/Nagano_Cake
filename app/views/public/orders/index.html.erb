<div class="col-md-10">
  <h3>注文履歴一覧</h3>
  
  <table class="tabel table-light table-borderless border">
    <thead class="table-active">
      <tr class="text-white bg-black">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td class="align-middle">
            〒 <%= order.zip_code %><br>
            <%= order.shipping_address %><br>
            <%= shipping_name %>
          </td>
          <td class="align-middle">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td class="align-middle"><%= order.total_price %>円</td>
          <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
        </tr> 
      <% end %>
    </tbody>
  </table>
</div>


